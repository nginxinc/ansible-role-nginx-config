{% if mgmt['ssl_crl'] is defined %}
ssl_crl {{ mgmt['ssl_crl'] }};
{% endif %}
{% if mgmt['ssl_name'] is defined %}
ssl_name {{ mgmt['ssl_name'] }};
{% endif %}
{% if mgmt['ssl_password_file'] is defined %}
ssl_password_file {{ mgmt['ssl_password_file'] }};
{% endif %}
{% if mgmt['ssl_protocols'] is defined %}
ssl_protocols {{ mgmt['ssl_protocols'] if mgmt['ssl_protocols'] is string else mgmt['ssl_protocols'] | join(' ') }};
{% endif %}
{% if mgmt['ssl_server_name'] is defined and mgmt['ssl_server_name'] %}
ssl_server_name {{ mgmt['ssl_server_name'] | ternary('on', 'off') }};
{% endif %}
{% if mgmt['ssl_trusted_certificate'] is defined %}
ssl_trusted_certificate {{ mgmt['ssl_trusted_certificate'] }};
{% endif %}
{% if mgmt['ssl_verify'] is defined and mgmt['ssl_verify'] is boolean %}
ssl_verify {{ mgmt['ssl_verify'] | ternary('on', 'off') }};
{% endif %}
{% if mgmt['ssl_verify_depth'] is defined and mgmt['ssl_verify_depth'] is number %}
ssl_verify_depth {{ mgmt['ssl_verify_depth'] }};
{% endif %}
{% if mgmt['usage_report'] is defined %} TODO
usage_report {{ mgmt['usage_report'] if mgmt['usage_report'] is string else mgmt['usage_report']['endpoint'] if mgmt['usage_report']['endpoint'] is defined }}{{ (' ' + mgmt['usage_report']['interval'] | string) if mgmt['usage_report']['interval'] is defined }};
{% endif %}
{% if mgmt['uuid'] is defined %}
{% endif %}
{% if mgmt['uuid_file'] is defined %}
uuid_file {{ mgmt['uuid_file'] }};
{% endif %}
{% endmacro %}
